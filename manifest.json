{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.0",
  "description": "Summarize text using AI.",
  "permissions": [],
  "host_permissions": ["http://localhost:5000/"],
  "action": {
    "default_popup": "popup.html"
